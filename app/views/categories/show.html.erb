<% if @category.present? %>
  <h2><%= @category.name if @category.present? %></h2>

<div class="row">
  <% @category.items.each do |item| %>
    <div >
      <div class="">
        <img src="<%= item.image %>" alt="" class="items">
        <div class="">
          <h3><%= item.title %></h3>
          <p><%= item.description %></p>
          <p><%= item.price %></p>
        <% end %>
      </div>
      </div>
    <% end %>
  </div>  
</div>
